<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EsquireAdventure" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/paper_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/paper_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background" >@color/paper_dark</item>
        <item name="android:textColor" >@color/white</item>
        <item name="android:text">@color/white</item>
        <item name="colorControlActivated">@color/gold</item>

        <item name="colorButtonNormal">@color/button_dark</item>
        <item name="snackbarTextViewStyle">@color/gold</item>






    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/paper_dark</item>
    </style>

    <style name="Theme.EsquireAdventure.AppBarOverlay">
        <item name="android:background">@color/gold</item>

    </style>

    <style name="Theme.EsquireAdventure.PopupOverlay">
        <item name="android:background">@color/paper_dark</item>
        <item name="android:text">@color/white</item>

    </style>

    <style name="PrefsTheme" parent="@android:style/Theme.Black.NoTitleBar">

        <item name="android:textColor">@color/white</item>
        <item name="android:text">@color/white</item>
        <item name="android:background">@color/paper_dark</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>




</resources>