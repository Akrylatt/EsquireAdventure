<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EsquireAdventure" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/paper_white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gold</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background" >@color/paper_white</item>
        <item name="android:text">@color/black</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorButtonNormal">@color/button_grey</item>
        <item name="snackbarTextViewStyle">@color/gold</item>






    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/paper_white</item>
    </style>

    <style name="Theme.EsquireAdventure.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--  <style name="Theme.EsquireAdventure.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
    <style name="Theme.EsquireAdventure.AppBarOverlay">
        <item name="android:background">@color/gold</item>

    </style>

    <style name="Theme.EsquireAdventure.PopupOverlay">
        <item name="android:background">@color/paper_white</item>
        <item name="android:textColor">@color/black</item>


    </style>

     <!-- <style name="Theme.EsquireAdventure.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/gold</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/button_grey
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/paper_white
        </item>

        <item name="android:textColor">@color/black</item>
    </style>



</resources>
